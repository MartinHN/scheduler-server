{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "watch": "nodemon --exec node --es-module-specifier-resolution=node --loader ts-node/esm ./src/index.ts",
    "watch:cli": "npm run watch -- -c tstName",
    "watch:srv": "npm run watch -- --srv ",
    "start": "node --experimental-modules --es-module-specifier-resolution=node  --loader ts-node/esm ./src/index.ts",
    "debug": "node --inspect --experimental-modules --es-module-specifier-resolution=node  --loader ts-node/esm ./src/index.ts",
    "build": "tsc",
    "run": "node --experimental-modules --es-module-specifier-resolution=node  out/index.js",
    "test": "node --experimental-modules --loader ts-node/esm ./tests/bonjourInstance.ts",
    "buildForAndroid": "tsc --project tsconfig.android.json",
    "package": "./package.sh"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bonjour": "^3.5.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "osc": "^2.4.2",
    "pigpio": "^3.3.1",
    "websocket": "^1.0.34",
    "ws": "^7.5.2"
  },
  "devDependencies": {
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5",
    "@types/bonjour": "^3.5.8",
    "@types/express": "^4.17.12",
    "@types/node": "^13.13.52",
    "@types/websocket": "^1.0.3",
    "@types/ws": "^7.4.6",
    "tslib": "^2.3.1"
  },
  "nodemonConfig": {
    "ignore": [
      "tests/*",
      "public/*"
    ],
    "delay": 2500
  }
}
